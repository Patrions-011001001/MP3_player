<Player>:
	MDGridLayout:
		rows:2
		cols:1

		MDBoxLayout:
			orientation:'vertical'
			MDBoxLayout:
				padding:[25,25]
				orientation:'vertical'
				FitImage:
					id:albom
					source:'Image/chas.png'

				MDBoxLayout:
					size_hint_y:.15

					MDIconButton:
						id:dislike
						icon:'cards-heart-outline'
						on_press:
							root.dislike()

					MDBoxLayout:
						orientation:'vertical'
						MDLabel:
							id:title
							halign: 'center'
							text:'Title'
						MDLabel:
							id:Artist
							halign: 'center'
							text:'Artist'

					MDIconButton:
						id:like
						icon:'cards-heart-outline'
						on_press:
							root.like()

			MDBoxLayout:
				orientation:'vertical'
				size_hint_y:.1
				MDSlider:
					id:progress
					on_active:
						root.set_treack()

				MDBoxLayout:
					MDLabel:
						id:current_time
						text:''
						halign:'center'

					MDBoxLayout:

					MDLabel:
						id:total_time
						text:''
						halign:'center'

			
		MDBoxLayout:
			size_hint_y:.1
			orientation:"vertical"
			MDBoxLayout:

			MDBoxLayout:
				MDBoxLayout:

				MDIconButton:
					id:random
					icon:'shuffle'
					on_press:
						root.random_position()
						app.mbn.children[1].screens[1].list = root.list_manager_defult
						app.mbn.children[1].screens[1].set_defult()

				MDIconButton:
					icon:"skip-previous"
					on_press:
						root.prev_()

				MDIconButton:
					id:playning_control
					icon:"play"
					on_press:
						root.play()

				MDIconButton:
					icon:'skip-next'
					on_press:
						root.next_()

				MDIconButton:
					id:repeat_list
					icon:'repeat-variant'
					on_press:
						root.repeat_l()

				MDBoxLayout:
			MDBoxLayout:
<search_screen>:
	MDGridLayout:
		rows:2
		cols:1

		MDBoxLayout:
			size_hint_y:.15
			padding:[10,10]
			MDIconButton:
				icon:'magnify'
				on_press:
					root.search()

			MDTextField:
				id:search_treack

		MDBoxLayout:
			RecycleView:
				id:rv
				viewclass: 'item'
				RecycleBoxLayout:
					default_size: None, dp(80)
					default_size_hint: 1, None
					size_hint_y: None
					height: self.minimum_height
					orientation: 'vertical'
<item>:
	MDBoxLayout:
		MDBoxLayout:
			size_hint_x:.15
			FitImage:
				source:root.source
	
		MDBoxLayout:
			padding:[10,0]
			orientation:'vertical'
			size_hint_x:.3
    		MDLabel:
    			text:root.text
	
    		MDLabel:
    			text:root.secondary_text
	
    	MDBoxLayout:
    		orientation:"horizontal"
    		size_hint_x:.25
    		MDIconButton:
    			icon:"play"
    			on_press:
    				app.mbn.children[1].screens[0].start_sound(root.id_treack)
	
    		MDIconButton:
    			icon:'trash-can'

    MDSeparator:

